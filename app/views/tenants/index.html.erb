<h1>Tenants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Phone number 2</th>
      <th>Lease</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @tenants.each do |tenant| %>
    <tr>
      <td><%= link_to tenant.id, tenant %></td>
      <td><%= tenant.name %></td>
      <td><%= tenant.address %></td>
      <td><%= tenant.phone_number %></td>
      <td><%= tenant.phone_number_2 %></td>
      <td><%= tenant.lease_id %></td>
      <td>
        <%= link_to 'Edit', edit_tenant_path(tenant), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', tenant, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link_to 'New Tenant', new_tenant_path, :class => 'btn btn-primary' %>

<% paginate @tenants %>
