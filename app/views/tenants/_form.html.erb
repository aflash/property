<%= form_for(@tenant, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @tenant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited this tenant from being saved:</h2>

      <ul>
      <% @tenant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <ul id="tab" class="nav nav-tabs">
      <li class="active"><a href="#tenant" data-toggle="tab">Tenant Details</a></li>
      <li><a href="#next_of_kin" data-toggle="tab">Next of Kin Details</a></li>
      <li><a href="#emergency_contact" data-toggle="tab">Emergency Contact Details</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade active in" id="tenant">
        <div class="control-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :address, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :address %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :phone_number, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :phone_number %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :phone_number_2, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :phone_number_2 %>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="next_of_kin">
        <div class="control-group">
          <%= f.label :next_of_kin_name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :next_of_kin_name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :next_of_kin_address, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :next_of_kin_address %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :next_of_kin_phone_number, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :next_of_kin_phone_number %>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="emergency_contact">
        <div class="control-group">
          <%= f.label :emergency_contact_name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :emergency_contact_name %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :emergency_contact_address, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :emergency_contact_address %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :emergency_contact_phone_number, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :emergency_contact_phone_number %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tenants_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

<% if false %>
<script type="text/javascript">
  jQuery(document).ready(function($) {
        $("#tenant_details").tabs();
  <% unless params[:selected_tab_name].blank? %>
    $("#tenant_details").tabs("select", '<%= params[:selected_tab_name] %>');
  <% end %>
})
</script>
<% end %>
