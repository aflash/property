<%= form_for(@condition, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @condition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@condition.errors.count, "error") %> prohibited this condition from being saved:</h2>

      <ul>
      <% @condition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :condition_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select(:condition_type, Code.condition_type.all, :code, :description, { :include_blank => true }) %>
      </div>
    </div>
    <div class="control-group diable">
      <%= f.label :lease_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :lease_id, :value => params[:lease_id], :readonly => 'true' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', conditions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
