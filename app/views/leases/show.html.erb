      </tr>
      <tr>
        <th><%= label_tag @lease.insurance_percentage, "Insurance %" %></th>
        <td><%= @lease.insurance_percentage %></td>
      </tr>
      <tr>
        <th><%= label_tag @lease.interest_rate, "Default Interest Rate" %></th>
        <td><%= @lease.interest_rate %></td>
      </tr>
    </table>
  </div>

  <div id="conditions">
    <%= render "conditions" %>
  </div>

<%= link_to 'Edit', edit_lease_path(@lease) %> |
<%= link_to 'Back', leases_path %>

<script type="text/javascript">
  jQuery(document).ready(function($) {
        $("#lease_details").tabs();
  <% unless params[:selected_tab_name].blank? %>
    $("#lease_details").tabs("select", '<%= params[:selected_tab_name] %>');
  <% end %>
})
</script>

